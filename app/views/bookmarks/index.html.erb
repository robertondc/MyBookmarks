<ul class="bookmarks_list">	
<% @bookmarks.each do |bookmark| %>
	<li class="bookmark_item <%= cycle('even', 'odd') %>">
		<div><p><span class="label notice"><%= bookmark.created_at.strftime("%d/%m/%y") %></span> <%= link_to bookmark.title, bookmark.url %></p>
			<p><%= bookmark.url %> <%= link_to 'edit', edit_bookmark_path(bookmark), :class => "label" %> <%= link_to 'delete', bookmark, :confirm => 'Are you sure?', :method => :delete, :class => "label" %></p></div>
		<div>
			<%bookmark.tags.split.each do |tag| %>
				<code><%= link_to tag, '#' %></code> 
			<%end%>
		</div>
	</li>
<% end %>
</ul>

<%= will_paginate @bookmarks %>

<% content_for :page_title do %>
	bookmark's
<%end%>

<% content_for :sidebar do %>
	<h6>Tags</h6>
	<div class="well">
	<ul>
		<% @tags.each do |tag,count| %>
			<li><%= link_to tag, '#' %> <code><%= count %></code></li>
		<%end%>
	</ul>
<%end%>

