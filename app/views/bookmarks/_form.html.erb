
<%= form_for(@bookmark, :html => {:class =>'form-stacked'}) do |f| %>

  <% if @bookmark.errors.any? %>
	<div class="alert-message block-message error">
	  <a class="close" href="#">Ã—</a>
	  <p><strong><%= pluralize(@bookmark.errors.count, "error") %></strong>:</p>
	  <ul>
	      <% @bookmark.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	  </ul>
	</div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :url %>
      <div class="input">
		<%= f.text_field :url, :class => "span8" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
		<%= f.text_field :title, :class => "span8" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :text_tags %>
      <div class="input">
		<%= f.text_field :text_tags, :class => "span8"%>
      </div>
    </div>
  <div class="actions">
    <%= f.submit :class => "btn primary" %>
    <%= link_to 'Cancel', bookmarks_path, :class => 'btn' %>
  </div>
  </fieldset>

<% end %>
